<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2937"
    tools:context=".activity.Activity.ChooseLanguageActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />


    <TextView
        android:id="@+id/lang"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/langview"
        android:gravity="center"
        android:paddingLeft="@dimen/btn_margin"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/btn_margin"
        android:paddingBottom="8dp"
        android:text="CHOOSE LANGUAGE"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/bt_lang"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:background="@drawable/ehmlang"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/btn_margin"
        android:paddingRight="@dimen/btn_margin"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:text=""
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
        <!--android:text="English"-->



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backicon"
        android:src="@drawable/backarrow5"
        android:onClick="backward"
        android:layout_gravity="left"
        android:layout_toLeftOf="@id/bt_lang"
        android:layout_alignBottom="@+id/bt_lang"
        android:layout_alignTop="@+id/bt_lang"
        android:layout_marginRight="30dp"
        android:scrollbars="horizontal"
        android:clickable="true"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foricon"
        android:src="@drawable/forarrow5"
        android:onClick="forward"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/bt_lang"
        android:layout_alignBottom="@+id/bt_lang"
        android:layout_alignTop="@+id/bt_lang"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        />


    <Button
        android:id="@+id/btEnter"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp"
        android:background="@drawable/btenter_bg"
        android:gravity="center"
        android:onClick="btEnter"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/btn_margin"
        android:paddingRight="@dimen/btn_margin"
        android:paddingTop="8dp"
        android:text="Enter"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btRefresh"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/refresh_btn_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/btn_margin"
        android:paddingRight="@dimen/btn_margin"
        android:paddingTop="8dp"
        android:text="Refresh"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:textStyle="bold" />




</RelativeLayout>