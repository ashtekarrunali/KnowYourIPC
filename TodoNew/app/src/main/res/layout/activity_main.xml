<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2937"
    tools:context=".activity.Activity.KnowURIPC">
<include layout="@layout/topbar"
    android:id="@+id/toolbar"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_marginTop="@dimen/btn_margin"
        android:layout_marginRight="@dimen/ipc_txt_view_left_right_margin"
        android:layout_marginLeft="@dimen/ipc_txt_view_left_right_margin"
        android:text="@string/knowuripc_txt"
        android:autoLink="email"
        app:layout_constraintBottom_toTopOf="@+id/btn_Enter"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginStart="@dimen/btn_margin"/>


  <Button
      android:id="@+id/btn_Enter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/btn_margin"
      android:paddingRight="@dimen/btn_margin"
      android:textAlignment="center"
      android:textSize="30sp"
      android:layout_marginBottom="@dimen/btn_margin"
      android:layout_marginEnd="@dimen/btn_margin"
      android:layout_marginStart="@dimen/btn_margin"
      android:text="@string/btn_enter"
      android:textAllCaps="false"
      android:onClick="Enterbtnclick"
      android:textColor="@color/colorWhite"
      android:background="@drawable/enter_btn_bg"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />




</android.support.constraint.ConstraintLayout>

